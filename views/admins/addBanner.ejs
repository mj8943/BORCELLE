    <script>
      document.getElementById("bannerForm").addEventListener("submit", function (event) {
        var name = document.getElementById("name").value.trim();
        var image = document.getElementById("image").value.trim();
        var link = document.getElementById("link").value.trim();
        var description = document.getElementById("description").value.trim();

        if (name === "" || image === "" || link === "" || description === "") {
          Swal.fire("All fields are required!");
          event.preventDefault();
          return;
        }

        var allowedExtensions = /(\.jpg|\.jpeg|\.png)$/i;
        if (!allowedExtensions.exec(image)) {
          Swal.fire({
            icon: "error",
            title: "Oops...",
            text: "Please upload an image file with the following extensions: .jpg, .jpeg, .png"
          });
          event.preventDefault();
          return;
        }
      });
