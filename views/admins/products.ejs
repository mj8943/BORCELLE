        $(document).ready(function () {
          $('#dataTable').DataTable();
        });
      </script>

      <script>
        function applyOrRemoveOffer(selectElement) {
          var selectedOption = selectElement.value;
          var productId = selectElement.getAttribute('data-product-id');
          console.log(productId);

          fetch('/admin/offer-apply', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId: productId, selectedOption: selectedOption })
          })
            .then(response => response.json())
            .then(data => {
              if (data.success) {
                Swal.fire({
                  position: "top-end",
                  icon: "success",
                  title: "Offer applied to the product!",
                  showConfirmButton: false,
                  timer: 1500
                });
                window.location.reload();
              } else {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: 'Applying offer failed'
                  });
              }
            })
            .catch(error => {
              console.error(error);
              Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: 'An error occurred while applying offer'
                  });
            });
        }

        // offer removing
        document.querySelectorAll('.removeOfferBtn').forEach(function (button) {
          button.addEventListener('click', function () {
            let productId = this.getAttribute('data-product-id');
            console.log(productId);
            fetch('/admin/remove-offer', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({ productId: productId })
            }).then(response => response.json())
              .then(data => {
                if (data.success) {
                  Swal.fire({
                    position: "top-end",
                    icon: "success",
                    title: "Offer removed!",
                    showConfirmButton: false,
                    timer: 1500
                  });
                  window.location.reload();
                } else {
                  Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: 'Offer removal failed'
                  });
                }
              })
              .catch(error => {
                console.error(error);
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: 'An error occurred while removing offer'
                  });
              });

          });
        });
      </script>

</body>

