    <div class="body-wrapper">
      <!--  Header Start -->


      <!--  Header End -->
      <div class="container-fluid">
        <table id="dataTable" class="tbl">
          <thead>
            <tr>
              <th style="background-color: rgb(112, 7, 7);text-align: center;"></th>
              <th style="background-color: rgb(112, 7, 7);text-align: center;">Name</th>
              <th style="background-color: rgb(112, 7, 7);text-align: center;">Category</th>
              <th style="background-color: rgb(112, 7, 7);text-align: center;">Price</th>
              <th style="background-color: rgb(112, 7, 7);text-align: center;">Description</th>
              <th style="background-color: rgb(112, 7, 7);text-align: center;">Stocks</th>
              <th style="background-color: rgb(112, 7, 7);text-align: center;">Offers</th>
              <th style="background-color: rgb(112, 7, 7);text-align: center;">Action</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(product=> { %>
              <tr>
                <td style="text-align: start; width: 150px;">
                  <% if (product.image) { %>
                    <img src="/productImages/<%= product.image[0] %>" alt="<%= product.name %> Image"
                      style="max-width: 150px; max-height: 70px;">
                    <% } else { %>
                      <p>No image available</p>
                      <% } %>
                </td>
                <td>
                  <%= product.name %>
                </td>
                <td>
                  <%= product.category %>
                </td>
                <td>
                  <% if(product.finalPrice) { %>
                    &#8377; <%= product.finalPrice %>
                      <% }else{ %>
                        &#8377; <%= product.price %>
                          <% } %>
                </td>
                <td>
                  <%= product.description %>
                </td>
                <td>
                  <% let sumVariants=0; %>
                    <% Object.keys(product.variant).forEach(key=> { %>
                      <% sumVariants +=product.variant[key]; %>
                        <% }); %>
                          <% if(sumVariants==0){ %>
                            <h6 style="color: red;">empty</h6>
                            <% }else {%>
                              <%= sumVariants %>
                                <% } %>
                </td>
                <% if(product.discount){ %>
                  <td>
                    <%=product.discount.offerName %> &nbsp; offer &nbsp; &#8377;&nbsp;<%= product.discount.discountOffer
                        %>
                        <button type="button" class="removeOfferBtn"
                          style="background-color: rgb(112, 7, 7); color: aliceblue; "
                          data-product-id="<%= product._id %>">Remove</button>
                  </td>
                  <% } else{%>
                    <td>
                      <div class="dropdown">
                        <select class="offerDropdown" data-product-id="<%= product._id %>"
                          onchange="applyOrRemoveOffer(this)">
                          <option value="" disabled selected>Select Product Offer</option>
                          <% offers.forEach(offer=>{ %>
                            <option value="<%= offer._id %>">
                              <%= offer.offerName %>&nbsp; offer &nbsp; &#8377; <%= offer.discountOffer %>
                            </option>
                            <% }) %>
                        </select>
                      </div>
                    </td>
                    <% } %>
                      <td><button type="button"
                          class="btn actionbtn <%= product.is_listed ? 'btn-danger':'btn-success'  %>"
                          data-product-id="<%= product._id %>"
                          data-product-state="<%= product.is_listed ? 'List' : 'Unlist' %>" style="min-width: 70px;">
                          <%= product.is_listed ? 'Unlist' : 'List' %>
                        </button>
                        <button data-bs-toggle="modal" data-bs-target="#staticBackdropEdit"
                          data-product-id="<%= product._id %>" data-product-name="<%= product.name %>"
                          data-product-category="<%= product.category %>" data-product-price="<%= product.price %>"
                          data-product-stocks="<%= product.stocks %>"
                          data-product-description="<%= product.description %>">
                          <a href="/admin/edit-product/<%= product._id %>"><img src="/edit-image.jpg" alt="Edit"
                              style="width: 24px; height: 24px;"></a>
                        </button>

                      </td>
              </tr>
              <% }); %>
          </tbody>
        </table>
        <br>
        <button style="background-color: rgb(112, 7, 7); height: 30px; width: 120px;"><a href='/admin/add_product'
            id="ap">Add Product</a></button>
      </div>

      <script src="/admin_asset/assets/libs/jquery/dist/jquery.min.js"></script>
      <script src="/admin_asset/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
      <script src="/admin_asset/assets/js/sidebarmenu.js"></script>
      <script src="/admin_asset/assets/js/app.min.js"></script>
      <script src="/admin_asset/assets/libs/simplebar/dist/simplebar.js"></script>

      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

      <script>
        document.querySelectorAll('.actionbtn').forEach(function (button) {
          button.addEventListener('click', function () {
            let productId = this.getAttribute('data-product-id');
            let currentState = this.getAttribute('data-product-state');

            let url;

            if (currentState === 'List') {
              url = '/admin/unlist-product';
            } else {
              url = '/admin/list-product';
            }

            fetch(url, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({ productId })
            })
              .then(response => response.json())
              .then(data => {
                if (data.success) {
                  console.log(data)
                  // Update button state
                  this.setAttribute('data-product-state', data.message.includes('unlisted') ? 'Unlist' : 'List');
                  this.textContent = data.message.includes('unlisted') ? 'List' : 'Unlist';
                  this.classList.toggle('btn-danger');
                  this.classList.toggle('btn-success');
                  Swal.fire({
                    position: "top-end",
                    icon: "success",
                    title: data.message,
                    showConfirmButton: false,
                    timer: 1500
                  });
                } else {
                  Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: 'Toggle block failed'
                  });
                }
              })
              .catch(error => {
                console.error(error);
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: 'An error occurred during toggle block'
                  });
              });
          });
        });
      </script>


      <script src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>

      <script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.js"></script>
