                                    <% let totalPrice=0; %>

                                        <% products.items.forEach(product=> { %>
                                            <% if(product.productId.is_listed==true ){ %>
                                                <li>
                                                    <%= product.productId.name %> x <%= product.quantity %> <span>
                                                                &#8377;
                                                                <% if(product.productId.finalPrice){ %>
                                                                    <%= product.productId.finalPrice * product.quantity
                                                                        %>
                                                                        <% }else{ %>
                                                                            <%= product.productId.price *
                                                                                product.quantity %>
                                                                                <% } %>
                                                            </span>
                                                </li>
                                                <% if(product.productId.finalPrice){ %>
                                                    <% totalPrice +=product.productId.finalPrice * product.quantity %>
                                                        <% }else{ %>
                                                            <% totalPrice +=product.productId.price * product.quantity
                                                                %>
                                                                <% } %>
                                                                    <% } %>
                                                                        <% }) %>
                                </ul>
                                <ul class="checkout__total__all">
                                    <li>Subtotal <span>&#8377; <%= totalPrice %></span></li>
                                    <% if(coupon){ %>
                                        <li>Coupon <span id="couponCode">&#8377; <%= coupon.discountAmount %></span>
                                        </li>
                                        <% totalPrice=totalPrice - coupon.discountAmount %>
                                            <% } %>
                                                <li>Total <span id="total">&#8377; <%= totalPrice %></span></li>
                                </ul>
                                <h5>Payment method</h5>
