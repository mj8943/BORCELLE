    <script>
        let orderId;

        var addressId;

        function selectAddress(addressIndex) {
            // Remove the 'selected-address-card' class from all cards
            var cards = document.querySelectorAll('.card');
            cards.forEach(function (card) {
                card.classList.remove('selected-address-card');
            });

            // Add the 'selected-address-card' class to the clicked card
            var selectedCard = document.getElementById('addressCard' + addressIndex);
            selectedCard.classList.add('selected-address-card');

            // Get the hidden input value (address._id) by using querySelector
            addressId = document.querySelector('#addressCard' + addressIndex + ' input[type="hidden"]').value;

            console.log('Selected Address ID:', addressId);
        }



        function checkPlaceOrder() {
            const selectedPaymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
            if (!addressId || !selectedPaymentMethod) {

                Swal.fire({
                    title: "Please choose both an address and a payment method",
                    showClass: {
                        popup: `
      animate__animated
      animate__fadeInUp
      animate__faster
    `
                    },
                    hideClass: {
                        popup: `
      animate__animated
      animate__fadeOutDown
      animate__faster
    `
                    }
                });
                return
            }

            const totalPriceElement = document.getElementById('total');
            const totalPrice = totalPriceElement.innerText.replace('₹', '');

            if (selectedPaymentMethod == "paypal") {
                console.log("payapl aan");
                const amount = document
                    .querySelector("#total")
                    .innerText.replace("₹", "");
                console.log(orderId);
                setupRazorpay(orderId, amount);
            } else if (selectedPaymentMethod == "COD") {
                placeOrder(totalPrice)
            } else if (selectedPaymentMethod == "wallet") {
                placeOrder(totalPrice)
            }
        }

        function setupRazorpay(orderId, amount) {
            console.log("setupRazorpay");
            var options = {
                key: "rzp_test_Mufod828rplfnf",
                amount: amount * 100,
                currency: "INR",
                name: "BORCELLE fashion",
                description: "Test Transaction",
                image: "Borcelle white.png",
                order_id: orderId,
                handler: async function (response) {
                    const paymentData = {
                        payment_id: response.razorpay_payment_id,
                        order_id: response.razorpay_order_id,
                        signature: response.razorpay_signature,
                    };
                    let amount = document
                        .querySelector("#total")
                        .innerText.replace("₹", "");
                    console.log(amount);
                    try {
                        console.log("verifyPayment");
                        const response = await fetch("/verify-payment", {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json",
                            },
                            body: JSON.stringify(paymentData),
                        });

                        if (response.ok) {
                            placeOrder(amount)
                        }
                    } catch (error) {
                        console.log(error);
                    }
                },
                theme: {
                    color: "#3399cc",
                },
            };
            var rzp1 = new Razorpay(options);

            rzp1.on("payment.failed", function (response) {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: response.error.description
                });
            });
            rzp1.open();
        }


        function placeOrder(totalPrice) {
            const selectedPaymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
            if (!addressId || !selectedPaymentMethod) {
                Swal.fire({
                    title: "Please choose both an address and a payment method",
                    showClass: {
                        popup: `
      animate__animated
      animate__fadeInUp
      animate__faster
    `
                    },
                    hideClass: {
                        popup: `
      animate__animated
      animate__fadeOutDown
      animate__faster
    `
                    }
                });
                return
            }
            let couponValue = null;
            if (document.getElementById('couponCode')) {

                couponValue = document.getElementById('couponCode').innerText.replace('₹', '');
            }

            const coupon = couponValue;

            var orderData = {
                addressId: addressId,
                paymentMethod: selectedPaymentMethod,
                totalPrice: totalPrice,
                coupon: coupon
            };

            fetch('/order-place', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(orderData)
            }).then(response => {
                if (response.ok) {
                    return response.json();
                } else {
                    return response.json().then(data => {

                        Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: data.message || 'Failed to place order'
                        });
                    });
                }
            })

                .then(data => {
                    console.log('Order placed successfully:', data);

                    if (data.success && data.redirect) {
                        window.location.href = data.redirect;
                        console.log('Redirecting to:', data.redirect);
                    } else {
                        console.error('Unexpected server response:', data);
                    }
                })
                .catch(error => {
                    console.error('Error placing order:', error);// Show error message in alert
                });

        }
    </script>

